<section class="show">
  <div class="user-show-header">
    <p><%= current_user.name %>'s Idea Box</p>
  </div>
  <div class="nav">
    <%= render partial: "nav" %>
  </div>
  <div class="searchlight">
    <%= form_for @search, url: searchlight_activerecord_path do |f| %>
      <fieldset>
        <%= f.label     :search_category_id %>
        <%= f.select :search_category_id, @categories %>
      </fieldset>

      <fieldset>
        <%= f.label :search_by_term %>
        <%= f.select :search_by_term, ["Short-Term", "Long-Term", "Bucket List"] %>
      </fieldset>
        <%= f.submit %>
    <% end %>
  </div>
  <div class="">
    <% @ideas.each do |idea| %>
      <section>
        <%= idea.body %>
        <%= idea.category.classification %>
        <%= idea.time_ago %>
        <% idea.images.each do |image| %>
          <%= image_tag image.image.url unless image.image.url.nil?  %>
        <% end %>
        <%= link_to "Edit", edit_user_idea_path(current_user, idea) %>
        <%= link_to "Edit", edit_user_idea_path(current_user, idea) %>
      </section>
      <%= will_paginate @ideas %>
    <% end %>
  </div>
</section>
