<section class="show">
  <div class="user-show-header">
    <p><%= current_user.name %>'s Idea Box</p>
  </div>
  <div class="nav">
    <%= render partial: "nav" %>
  </div>
  <div class="">
    <p>
    <%= form_for(@search, url: user_path, method: :get) do |f| %>
      <%= f.label :category, "Goal Category" %>
      <%= f.select :category, categories_collection, include_blank: true %>

      <%= f.label :term, "Length of Goal" %>
      <%= f.select :term, term_collection, include_blank: true %>

      <%= f.submit "Search" %>
    <% end %>
  </div>
  <div class="">
    <% if @ideas.any? %>
      <section>
        <% @ideas.each do |idea| %>
          <%= idea.body %>
          <%= idea.category.classification %>
          <%= idea.time_ago %>
          <% idea.images.each do |image| %>
            <%= image_tag image.image.url unless image.image.url.nil?  %>
          <% end %>
          <%= link_to "Edit", edit_user_idea_path(current_user, idea) %>
          <%= link_to "Delete", user_idea_path(current_user, idea), method: :delete %>
        <% end %>
      </section>
    <% else %>

    <% end %>
  </div>
</section>
