<section class="show">
  <div class="user-show-header">
    <p><%= current_user.name %>'s Concert Box</p>
  </div>
  <div class="nav">
    <%= render partial: "nav" %>
  </div>
  <div class="sort-bar">
    <%= form_for(@search, url: user_path, method: :get) do |f| %>
      <%= f.label :category, "Sort Concerts by Genre" %>
      <%= f.select :category, categories_collection, include_blank: "All Genres" %>

      <%= f.label :purchased %>
      <%= f.select :purchased, [["Yes", true], ["No", false]], include_blank: "---" %>

      <%= f.label :name_like, "Search Concerts by Name" %>
      <%= f.text_field :name_like %>

      <%= f.submit "Search" %>
    <% end %>
  </div>
  <div class="concert-card-parent">
    <% if @concerts.any?%>
      <% @concerts.each do |concert| %>
        <section class="concert-card-child">
          <%= concert.category.classification %>
          <!-- <%= concert.time_ago %> -->
          <div class="concert-image">
            <% concert.images.each do |image| %>
            <%= image_tag image.image.url unless image.image.url.nil?  %>
            <% end %>
          </div>
          <%= concert.name %>
          <!-- <%= link_to "Edit", edit_user_concert_path(current_user, concert) %>
          <%= link_to "Delete", user_concert_path(current_user, concert), method: :delete %> -->
        </section>
      <% end %>
    <% else %>
      <p>No matches.</p>
    <% end %>
  </div>
  <div class="pagination">
    <%= will_paginate @concerts %>
  </div>
</section>
