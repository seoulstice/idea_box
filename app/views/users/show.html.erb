<section class="show">
  <div class="user-show-header">
    <p><%= current_user.name %>'s Idea Box</p>
  </div>
  <div class="nav">
    <%= render partial: "nav" %>
  </div>
  <div class="">
    <%= form_for(@search, url: user_path) do |f| %>
      <%= f.label :category %>
      <%= f.select :category, @categories %>

      <%= f.submit %>
    <% end %>
  </div>
  <div class="">
    <% @ideas.each do |idea| %>
      <section>
        <%= idea.body %>
        <%= idea.category.classification %>
        <%= idea.time_ago %>
        <% idea.images.each do |image| %>
          <%= image_tag image.image.url unless image.image.url.nil?  %>
        <% end %>
        <%= link_to "Edit", edit_user_idea_path(current_user, idea) %>
        <%= link_to "Delete", user_idea_path(current_user, idea), method: :delete %>
      </section>
    <% end %>
  </div>
</section>
