<div class="">
  <table>
    <tr>
      <th>Idea</th>
      <th>Category</th>
      <th>Created</th>
      <th>Updated</th>
      <th></th>
      <th></th>
    </tr>
    <% @ideas.each do |idea| %>
    <tr>
      <td><%= idea.body %></td>
      <td><%= idea.category.classification %></td>
      <td><%= idea.created_at %></td>
      <td><%= idea.updated_at %></td>
      <td><%= link_to "Edit", edit_user_idea_path(current_user, idea) %></td>
      <td><%= link_to "Delete", user_idea_path(current_user, idea), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
</div>
