<div class="new-idea">
  <%= form_for [current_user, @idea] do |f| %>
    <%= f.label :body %>
    <%= f.text_field :body %>

    <%= f.label :category_id %>
    <%= f.collection_select(:category_id, @categories, :id, :classification ) %>

    <%= f.label :image, "Select an Image" %>
    <%= f.collection_select(:image_ids, @images, :id, :name) %>

    <%= f.submit %>

  <% end %>
</div>
